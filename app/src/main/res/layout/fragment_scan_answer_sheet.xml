<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ScanAnswerSheet">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Scan Answer Sheet"
          android:textSize="20sp"
          android:fontFamily="@font/poppins_bold"
          android:textColor="@color/primaryColor"
          android:layout_marginTop="78dp"
          android:layout_marginHorizontal="20dp"
          />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="15dp"
            android:background="#8B191645"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/secondaryColor"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:background="@drawable/cardbg"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scan Answer Sheet"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/primaryColor"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select a student and answer key to grade"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/primaryColor"
                    android:layout_marginTop="2dp"
                    android:layout_marginHorizontal="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Student"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/primaryColor"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="15dp"
                    />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:backgroundTint="#C8E5E5E5"
                    android:layout_marginHorizontal="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer Key"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/primaryColor"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="15dp"
                    />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:backgroundTint="#B0E5E5E5"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="20dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/scanBtn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/border"
                    android:hint="Start Scanning"
                    android:textSize="18sp"
                    android:textColorHint="@color/primaryColor"
                    android:layout_marginHorizontal="13dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/poppins_bold"
                    android:letterSpacing=".1"
                    android:backgroundTint="#9243C6AC"
                    android:paddingLeft="70dp"
                    android:drawableLeft="@drawable/baseline_photo_camera_24"
                    android:drawableTint="@color/primaryColor"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>