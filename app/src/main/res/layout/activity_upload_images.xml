<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadImages">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/cameraImage"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_image_24"
            android:layout_margin="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="#78FFC4"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginHorizontal="20dp"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/captureImgBtn"
                android:backgroundTint="#BF057E0A"
                android:text="Capture Image"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="12dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accepted formats: jpg, jpeg, png, pdf"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Results"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_login_bg"
            android:padding="5dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:backgroundTint="#78FFC4"
                android:layout_weight="1"
                app:cardCornerRadius="4dp"
                app:cardElevation="8dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="4dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="file1.png"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#CD000000"
                    android:textStyle="bold"
                    android:textIsSelectable="true"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:backgroundTint="#78FFC4"
                app:cardCornerRadius="8dp"
                android:layout_weight="1"
                app:cardElevation="4dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="4dp"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="file2.png"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#CD000000"
                    android:textStyle="bold"
                    android:textIsSelectable="true"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:backgroundTint="#78FFC4"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="4dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:src="@drawable/baseline_add_circle_24"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/resultText"
            android:text=""
            android:padding="5dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/border"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:layout_marginTop="10dp"
            android:scrollbars="vertical"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/copyTextBtn"
            android:visibility="invisible"
            android:text="Submit"
            android:backgroundTint="@color/green"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>


</ScrollView>