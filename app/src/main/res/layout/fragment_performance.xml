<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/performanceLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#F8F9FA"
    android:scrollbars="none"
    tools:context=".PerformanceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analytics"
            android:textSize="20sp"
            android:textColor="@color/primaryColor"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visualize and analyze student performance data"
            android:textColor="@color/primaryColor"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/passRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:backgroundTint="@color/primaryColor"
            android:layout_marginHorizontal="4dp"
            app:cardCornerRadius="6dp"
            app:cardBackgroundColor="@color/neutral"
            app:cardElevation="2dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="2dp"
                android:padding="8dp"
                android:background="@drawable/cardbg"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Exams"
                    android:textSize="18sp"
                    android:textColor="@color/primaryColor"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_gravity="start|center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="24sp"
                    android:textColor="@color/secondaryColor"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_gravity="start|center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Across 3 answer Keys"
                    android:textSize="14sp"
                    android:textColor="@color/primaryColor"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_gravity="start|center_vertical"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/averageScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginHorizontal="4dp"
            app:cardCornerRadius="6dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/primaryColor"
            app:cardElevation="2dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/cardbg"
                android:padding="8dp"
                android:layout_marginStart="2dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average Score"
                    android:textSize="18sp"
                    android:textColor="@color/primaryColor"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_gravity="start|center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65%"
                    android:textSize="24sp"
                    android:textColor="@color/secondaryColor"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_gravity="start|center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overall Performance"
                    android:textSize="14sp"
                    android:textColor="@color/primaryColor"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_gravity="start|center_vertical"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/totalExams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="4dp"
            app:cardCornerRadius="6dp"
            app:cardBackgroundColor="@color/primaryColor"
            app:cardElevation="2dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="2.5dp"
                android:background="@drawable/cardbg"
                android:padding="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pass Rate"
                    android:textSize="18sp"
                    android:textColor="@color/primaryColor"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_gravity="start|center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="97%"
                    android:textSize="24sp"
                    android:textColor="@color/secondaryColor"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_gravity="start|center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tests With 60% 0r Higher"
                    android:textSize="14sp"
                    android:textColor="@color/primaryColor"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_gravity="start|center_vertical"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/performanceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Performance Summary"
            android:textColor="@color/secondaryColor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:gravity="center" />


        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/scoreDistribution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score Distribution"
            android:textColor="@color/primaryColor"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of exams / tests in each score range"
            android:textColor="@color/primaryColor"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piChart"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="90dp"/>

    </LinearLayout>
</ScrollView>
